<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/money_lupa"
        tools:srcCompat="@drawable/money_lupa"
        app:tint="@color/primaryA30"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="end"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="8dp"
        android:paddingEnd="20dp"
        android:layout_height="wrap_content" android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text"
            android:layout_marginBottom="8dp"
            android:text="@string/no_data_for_filter"/>
        <Button
            android:id="@+id/add_new_purchase_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/add"
            android:drawablePadding="8dp"
            style="@style/Bordered"
            android:text="@string/addPurchaseButton"/>
    </LinearLayout>


</FrameLayout>